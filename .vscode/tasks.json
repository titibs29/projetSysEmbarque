{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: g++ générer le fichier actif",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"${workspaceFolder}/main.cpp",
				"${workspaceFolder}/libs/*.cpp",
				//"${workspaceFolder}/libs/*.h",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"-lwiringPi"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}